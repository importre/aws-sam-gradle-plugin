root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.{js, json}]
indent_size = 2

[*.{md, markdown}]
trim_trailing_whitespace = false

[*.{yml, yaml}]
indent_size = 2
